<?xml version="1.0" encoding="utf-8"?>
<animNode>
	<m_Name>run_bicycle</m_Name>
	<m_AnimName>Bob_Bicycle_PedalFast</m_AnimName>
	<m_Priority>10</m_Priority>
	<m_ConditionPriority>10</m_ConditionPriority>
	<m_deferredBoneAxis>Y</m_deferredBoneAxis>
	<m_SpeedScale>BicycleRunSpeed</m_SpeedScale>
    <m_Scalar>BicycleSpeed</m_Scalar>
	<m_BlendTime>0.50</m_BlendTime>
    <m_blendOutTime>0.50</m_blendOutTime>
    <m_SyncTrackingEnabled>false</m_SyncTrackingEnabled>
    <m_Events>
        <m_EventName>SetVariable</m_EventName>
        <m_Time>Start</m_Time>
        <m_ParameterValue>Bicycle_Riding=true</m_ParameterValue>
    </m_Events>
	<m_Conditions>
        <m_Name>BicycleActive</m_Name>
        <m_Type>BOOL</m_Type>
        <m_Value>true</m_Value>
    </m_Conditions>
    <m_Transitions>
        <m_Target>walk_bicycle</m_Target>
        <m_blendInTime>0.4</m_blendInTime>
        <m_blendOutTime>0.4</m_blendOutTime>
        <m_Conditions>
            <m_Name>isRunning</m_Name>
            <m_Type>BOOL</m_Type>
            <m_Value>false</m_Value>
        </m_Conditions>
        <m_Conditions>
            <m_Name>isMoving</m_Name>
            <m_Type>BOOL</m_Type>
            <m_Value>true</m_Value>
        </m_Conditions>
    </m_Transitions>
    <m_Transitions>
        <m_Target>idle_bicycle</m_Target>
        <m_blendInTime>0.20</m_blendInTime>
        <m_blendOutTime>0.20</m_blendOutTime>
        <m_speedScale>1.00</m_speedScale>
        <m_AnimName>Bob_Bicycle_PedalToIdle</m_AnimName>
    </m_Transitions>
    <m_Transitions>
        <m_Target>stopping_bicycle</m_Target>
        <m_blendInTime>0.50</m_blendInTime>
        <m_blendOutTime>0.50</m_blendOutTime>
        <m_Conditions>
            <m_Name>isMoving</m_Name>
            <m_Type>BOOL</m_Type>
            <m_Value>false</m_Value>
        </m_Conditions>
        <m_Conditions>
            <m_Name>isRunning</m_Name>
            <m_Type>BOOL</m_Type>
            <m_Value>false</m_Value>
        </m_Conditions>
    </m_Transitions>
</animNode>